{
  "manifest_version": 3,
  "name": "DTM",
  "version": "1.0",
  "description": "A Chrome extension using Vite + React",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.jpg"
  },
  "permissions": [
    "tabs",
    "scripting"
  ],
  "icons": {
    "16": "icon.jpg"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
